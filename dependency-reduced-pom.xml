<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>ninja.egg82.plugins</groupId>
  <artifactId>PlayerIPAPI</artifactId>
  <name>PlayerIPAPI</name>
  <version>1.2.12</version>
  <description>PlayerIPAPI for Bukkit/Spigot</description>
  <url>https://www.egg82.ninja</url>
  <build>
    <sourceDirectory>src</sourceDirectory>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.7.0</version>
        <configuration>
          <source>1.8</source>
          <target>1.8</target>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.1.0</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <resource>META-INF/services/java.sql.Driver</resource>
                </transformer>
                <transformer />
              </transformers>
              <filters>
                <filter>
                  <artifact>*:*</artifact>
                  <excludes>
                    <exclude>META-INF/*.SF</exclude>
                    <exclude>META-INF/*.DSA</exclude>
                    <exclude>META-INF/*.RSA</exclude>
                    <exclude>**/*.html</exclude>
                    <exclude>**/*.txt</exclude>
                    <exclude>junit/**</exclude>
                    <exclude>org/junit/**</exclude>
                    <exclude>org/hamcrest/**</exclude>
                    <exclude>edu/umd/cs/findbugs/**</exclude>
                    <exclude>org/checkerframework/**</exclude>
                    <exclude>afu/**</exclude>
                    <exclude>org/codehaus/mojo/animal_sniffer/**</exclude>
                    <exclude>com/google/common/**</exclude>
                    <exclude>org/apache/commons/codec/**</exclude>
                    <exclude>org/apache/commons/io/**</exclude>
                    <exclude>org/apache/commons/lang/**</exclude>
                    <exclude>org/apache/commons/lang3/**</exclude>
                    <exclude>org/json/simple/**</exclude>
                    <exclude>org/yaml/**</exclude>
                  </excludes>
                </filter>
                <filter>
                  <artifact>ninja.egg82.lib:*</artifact>
                  <excludes>
                    <exclude>org/reflections/**</exclude>
                  </excludes>
                </filter>
              </filters>
              <minimizeJar>false</minimizeJar>
              <relocations>
                <relocation>
                  <pattern>com.github</pattern>
                  <shadedPattern>me.egg82.ipapi.extern.com.github</shadedPattern>
                </relocation>
                <relocation>
                  <pattern>com.google</pattern>
                  <shadedPattern>me.egg82.ipapi.extern.com.google</shadedPattern>
                  <excludes>
                    <exclude>com.google.common.*</exclude>
                  </excludes>
                </relocation>
                <relocation>
                  <pattern>com.googlecode</pattern>
                  <shadedPattern>me.egg82.ipapi.extern.com.googlecode</shadedPattern>
                </relocation>
                <relocation>
                  <pattern>com.rabbitmq</pattern>
                  <shadedPattern>me.egg82.ipapi.extern.com.rabbitmq</shadedPattern>
                </relocation>
                <relocation>
                  <pattern>com.rollbar</pattern>
                  <shadedPattern>me.egg82.ipapi.extern.com.rollbar</shadedPattern>
                </relocation>
                <relocation>
                  <pattern>com.zaxxer</pattern>
                  <shadedPattern>me.egg82.ipapi.extern.com.zaxxer</shadedPattern>
                </relocation>
                <relocation>
                  <pattern>it.unimi</pattern>
                  <shadedPattern>me.egg82.ipapi.extern.it.unimi</shadedPattern>
                </relocation>
                <relocation>
                  <pattern>javassist</pattern>
                  <shadedPattern>me.egg82.ipapi.extern.javassist</shadedPattern>
                </relocation>
                <relocation>
                  <pattern>javax.annotation</pattern>
                  <shadedPattern>me.egg82.ipapi.extern.javax.annotation</shadedPattern>
                </relocation>
                <relocation>
                  <pattern>net.jodah</pattern>
                  <shadedPattern>me.egg82.ipapi.extern.net.jodah</shadedPattern>
                </relocation>
                <relocation>
                  <pattern>net.jcip</pattern>
                  <shadedPattern>me.egg82.ipapi.extern.net.jcip</shadedPattern>
                </relocation>
                <relocation>
                  <pattern>ninja.egg82</pattern>
                  <shadedPattern>me.egg82.ipapi.lib.ninja.egg82</shadedPattern>
                </relocation>
                <relocation>
                  <pattern>ninja.leaping</pattern>
                  <shadedPattern>me.egg82.ipapi.extern.ninja.leaping</shadedPattern>
                </relocation>
                <relocation>
                  <pattern>org.apache.commons</pattern>
                  <shadedPattern>me.egg82.ipapi.extern.org.apache.commons</shadedPattern>
                  <excludes>
                    <exclude>org.apache.commons.codec.*</exclude>
                    <exclude>org.apache.commons.io.*</exclude>
                    <exclude>org.apache.commons.lang.*</exclude>
                    <exclude>org.apache.commons.lang3.*</exclude>
                  </excludes>
                </relocation>
                <relocation>
                  <pattern>org.bouncycastle</pattern>
                  <shadedPattern>me.egg82.ipapi.extern.org.bouncycastle</shadedPattern>
                  <excludes>
                    <exclude>org.bouncycastle.x509.*</exclude>
                  </excludes>
                </relocation>
                <relocation>
                  <pattern>org.json</pattern>
                  <shadedPattern>me.egg82.ipapi.extern.org.json</shadedPattern>
                  <excludes>
                    <exclude>org.json.simple.*</exclude>
                  </excludes>
                </relocation>
                <relocation>
                  <pattern>org.reflections</pattern>
                  <shadedPattern>me.egg82.ipapi.extern.org.reflections</shadedPattern>
                </relocation>
                <relocation>
                  <pattern>redis.clients</pattern>
                  <shadedPattern>me.egg82.ipapi.extern.redis.clients</shadedPattern>
                </relocation>
              </relocations>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <repositories>
    <repository>
      <id>spigot-repo</id>
      <url>https://hub.spigotmc.org/nexus/content/repositories/snapshots/</url>
    </repository>
    <repository>
      <id>egg82-ninja</id>
      <url>https://www.myget.org/F/egg82-java/maven/</url>
    </repository>
    <repository>
      <id>sponge</id>
      <url>https://repo.spongepowered.org/maven/</url>
    </repository>
  </repositories>
  <dependencies>
    <dependency>
      <groupId>org.bukkit</groupId>
      <artifactId>bukkit</artifactId>
      <version>1.13-pre5-R0.1-SNAPSHOT</version>
      <scope>provided</scope>
      <exclusions>
        <exclusion>
          <artifactId>commons-lang</artifactId>
          <groupId>commons-lang</groupId>
        </exclusion>
        <exclusion>
          <artifactId>gson</artifactId>
          <groupId>com.google.code.gson</groupId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>com.googlecode.json-simple</groupId>
      <artifactId>json-simple</artifactId>
      <version>1.1.1</version>
      <scope>provided</scope>
      <exclusions>
        <exclusion>
          <artifactId>junit</artifactId>
          <groupId>junit</groupId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>org.apache.commons</groupId>
      <artifactId>commons-lang3</artifactId>
      <version>3.7</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>com.google.guava</groupId>
      <artifactId>guava</artifactId>
      <version>25.1-jre</version>
      <scope>provided</scope>
      <exclusions>
        <exclusion>
          <artifactId>jsr305</artifactId>
          <groupId>com.google.code.findbugs</groupId>
        </exclusion>
        <exclusion>
          <artifactId>error_prone_annotations</artifactId>
          <groupId>com.google.errorprone</groupId>
        </exclusion>
        <exclusion>
          <artifactId>j2objc-annotations</artifactId>
          <groupId>com.google.j2objc</groupId>
        </exclusion>
        <exclusion>
          <artifactId>animal-sniffer-annotations</artifactId>
          <groupId>org.codehaus.mojo</groupId>
        </exclusion>
      </exclusions>
    </dependency>
  </dependencies>
</project>

